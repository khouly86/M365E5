{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "LogPath": "logs/cloudativ-.log"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=cloudativ_assessment.db"
  },
  "Database": {
    "Provider": "SQLite"
  },
  "Authentication": {
    "UseEntraId": false,
    "EntraId": {
      "Instance": "https://login.microsoftonline.com/",
      "TenantId": "",
      "ClientId": "",
      "CallbackPath": "/signin-oidc"
    }
  },
  "OpenAI": {
    "Enabled": true,
    "ApiKey": "",
    "Model": "gpt-4o-mini",
    "MaxTokens": 16384
  },
  "ComplianceStandards": {
    "NcaCcc": {
      "DocumentUrl": "",
      "Name": "Saudi NCA Cloud Computing Controls"
    },
    "Iso27001": {
      "DocumentUrl": "",
      "Name": "ISO 27001:2022 Controls"
    },
    "PciDss": {
      "DocumentUrl": "",
      "Name": "PCI DSS v4.0"
    },
    "Hipaa": {
      "DocumentUrl": "",
      "Name": "HIPAA Security Rule"
    },
    "NistCsf": {
      "DocumentUrl": "",
      "Name": "NIST Cybersecurity Framework"
    }
  },
  "Assessment": {
    "MaxConcurrentJobs": 2,
    "DefaultTimeoutMinutes": 30,
    "RetryCount": 3
  },
  "Branding": {
    "CompanyName": "Cloudativ",
    "AppName": "Cloudativ Assessment",
    "PrimaryColor": "#E0FC8E",
    "SecondaryColor": "#51627A",
    "AccentColor": "#EF7348",
    "LightBlue": "#B6CBE0"
  },
  "Stripe": {
    "SecretKey": "",
    "PublishableKey": "",
    "WebhookSecret": "",
    "MonthlyPriceId": "",
    "YearlyPriceId": ""
  },
  "Subscription": {
    "TrialDays": 14,
    "TrialAssessmentLimit": 3,
    "MonthlyAssessmentLimit": 10,
    "YearlyAssessmentLimit": -1,
    "MonthlyPrice": 49.99,
    "YearlyPrice": 499.99
  }
}
