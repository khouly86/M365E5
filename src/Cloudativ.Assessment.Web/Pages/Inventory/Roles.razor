@page "/inventory/roles"
@attribute [Authorize]
@inject IInventoryService InventoryService
@inject ITenantService TenantService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<PageTitle>Directory Roles - Cloudativ Assessment</PageTitle>

<div class="d-flex justify-space-between align-center mb-4">
    <div>
        <MudText Typo="Typo.h5" Style="font-weight: 600; color: #51627A;">Directory Roles</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">Azure AD role assignments and privileged access</MudText>
    </div>
    <div class="d-flex gap-2 align-center">
        <MudSelect T="Guid?" Label="Tenant" Value="_selectedTenantId" Dense="true"
                   Style="min-width: 200px;" Variant="Variant.Outlined"
                   ValueChanged="@(async (Guid? v) => { _selectedTenantId = v; await LoadRolesAsync(); })">
            @foreach (var tenant in _tenants)
            {
                <MudSelectItem Value="@((Guid?)tenant.Id)">@tenant.Name</MudSelectItem>
            }
        </MudSelect>
        <Cloudativ.Assessment.Web.Shared.Components.ExportDropdown
            ExportType="roles"
            TenantId="_selectedTenantId" />
    </div>
</div>

<!-- Quick Stats -->
<MudGrid Class="mb-4">
    <MudItem xs="6" sm="3">
        <MudPaper Class="pa-3" Elevation="1" Style="border-radius: 8px;">
            <MudText Typo="Typo.caption" Color="Color.Secondary">Total Roles</MudText>
            <MudText Typo="Typo.h6" Style="font-weight: 600;">@_roles.Count</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="pa-3" Elevation="1" Style="border-radius: 8px; border-left: 3px solid #f44336;">
            <MudText Typo="Typo.caption" Color="Color.Secondary">Privileged Roles</MudText>
            <MudText Typo="Typo.h6" Style="font-weight: 600; color: #f44336;">@_roles.Count(r => r.IsPrivileged)</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="pa-3" Elevation="1" Style="border-radius: 8px; border-left: 3px solid #51627A;">
            <MudText Typo="Typo.caption" Color="Color.Secondary">Total Assignments</MudText>
            <MudText Typo="Typo.h6" Style="font-weight: 600;">@_roles.Sum(r => r.MemberCount)</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="6" sm="3">
        <MudPaper Class="pa-3" Elevation="1" Style="border-radius: 8px; border-left: 3px solid #9C27B0;">
            <MudText Typo="Typo.caption" Color="Color.Secondary">Service Principals</MudText>
            <MudText Typo="Typo.h6" Style="font-weight: 600;">@_roles.Sum(r => r.ServicePrincipalMemberCount)</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

<!-- Filter -->
<div class="d-flex gap-2 mb-4">
    <MudChip Color="@(_showPrivilegedOnly ? Color.Error : Color.Default)"
             Variant="@(_showPrivilegedOnly ? Variant.Filled : Variant.Outlined)"
             OnClick="@(() => _showPrivilegedOnly = !_showPrivilegedOnly)">
        <MudIcon Icon="@Icons.Material.Filled.AdminPanelSettings" Size="Size.Small" Class="mr-1" />
        Privileged Only
    </MudChip>
    <MudChip Color="@(_showWithMembersOnly ? Color.Primary : Color.Default)"
             Variant="@(_showWithMembersOnly ? Variant.Filled : Variant.Outlined)"
             OnClick="@(() => _showWithMembersOnly = !_showWithMembersOnly)">
        <MudIcon Icon="@Icons.Material.Filled.People" Size="Size.Small" Class="mr-1" />
        With Members Only
    </MudChip>
</div>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudPaper Elevation="2" Style="border-radius: 12px;">
        <MudTable Items="FilteredRoles" Dense="true" Hover="true" Striped="true">
            <HeaderContent>
                <MudTh>Role</MudTh>
                <MudTh>Type</MudTh>
                <MudTh>Privileged</MudTh>
                <MudTh>User Members</MudTh>
                <MudTh>SP Members</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>
                    <div class="d-flex align-center">
                        <MudIcon Icon="@(context.IsPrivileged ? Icons.Material.Filled.AdminPanelSettings : Icons.Material.Filled.VerifiedUser)"
                                 Color="@(context.IsPrivileged ? Color.Error : Color.Primary)"
                                 Size="Size.Small" Class="mr-2" />
                        <div>
                            <MudText Typo="Typo.body2" Style="font-weight: 500;">@context.DisplayName</MudText>
                            <MudText Typo="Typo.caption" Color="Color.Secondary">@context.RoleTemplateId</MudText>
                        </div>
                    </div>
                </MudTd>
                <MudTd>
                    <MudChip Size="Size.Small" Color="@(context.IsBuiltIn ? Color.Default : Color.Info)" Variant="Variant.Outlined">
                        @(context.IsBuiltIn ? "Built-in" : "Custom")
                    </MudChip>
                </MudTd>
                <MudTd>
                    @if (context.IsPrivileged)
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Error" Size="Size.Small" />
                    }
                </MudTd>
                <MudTd>
                    <MudChip Size="Size.Small" Color="@(context.MemberCount > 0 ? Color.Primary : Color.Default)" Variant="Variant.Outlined">
                        @context.MemberCount
                    </MudChip>
                </MudTd>
                <MudTd>
                    @if (context.ServicePrincipalMemberCount > 0)
                    {
                        <MudChip Size="Size.Small" Color="Color.Warning" Variant="Variant.Outlined">
                            @context.ServicePrincipalMemberCount
                        </MudChip>
                    }
                    else
                    {
                        <MudText Typo="Typo.caption" Color="Color.Secondary">0</MudText>
                    }
                </MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small"
                                   OnClick="@(() => ViewRoleDetails(context))"
                                   Disabled="@(context.MemberCount == 0 && context.ServicePrincipalMemberCount == 0)" />
                </MudTd>
            </RowTemplate>
            <NoRecordsContent>
                <MudText Typo="Typo.body1" Class="pa-4 text-center">No directory roles found.</MudText>
            </NoRecordsContent>
        </MudTable>
    </MudPaper>
}

<!-- Role Details Dialog -->
<MudDialog @bind-Visible="_showRoleDialog" Options="_dialogOptions">
    <DialogContent>
        @if (_selectedRole != null)
        {
            <MudGrid>
                <MudItem xs="12">
                    <div class="d-flex align-center mb-4">
                        <MudIcon Icon="@((_selectedRole.IsPrivileged ? Icons.Material.Filled.AdminPanelSettings : Icons.Material.Filled.VerifiedUser))"
                                 Color="@(_selectedRole.IsPrivileged ? Color.Error : Color.Primary)"
                                 Size="Size.Large" Class="mr-3" />
                        <div>
                            <MudText Typo="Typo.h6">@_selectedRole.DisplayName</MudText>
                            <div class="d-flex gap-2 mt-1">
                                @if (_selectedRole.IsPrivileged)
                                {
                                    <MudChip Size="Size.Small" Color="Color.Error">Privileged</MudChip>
                                }
                                <MudChip Size="Size.Small" Color="Color.Default" Variant="Variant.Outlined">
                                    @(_selectedRole.IsBuiltIn ? "Built-in" : "Custom")
                                </MudChip>
                            </div>
                        </div>
                    </div>
                </MudItem>
                <MudItem xs="12">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">Members (@(_selectedRole.MemberCount + _selectedRole.ServicePrincipalMemberCount))</MudText>
                    <MudPaper Class="pa-3" Elevation="0" Style="background: #f5f5f5; border-radius: 8px; max-height: 300px; overflow-y: auto;">
                        @foreach (var member in _selectedRole.Members.Take(50))
                        {
                            <div class="d-flex align-center py-1">
                                <MudIcon Icon="@(member.StartsWith("SP:") ? Icons.Material.Filled.Api : Icons.Material.Filled.Person)"
                                         Size="Size.Small"
                                         Color="@(member.StartsWith("SP:") ? Color.Warning : Color.Primary)"
                                         Class="mr-2" />
                                <MudText Typo="Typo.body2">@member.Replace("SP:", "")</MudText>
                            </div>
                        }
                        @if (_selectedRole.Members.Count > 50)
                        {
                            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-2">
                                ... and @(_selectedRole.Members.Count - 50) more members
                            </MudText>
                        }
                    </MudPaper>
                </MudItem>
            </MudGrid>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="@(() => _showRoleDialog = false)">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [SupplyParameterFromQuery]
    public Guid? TenantId { get; set; }

    private bool _isLoading = true;
    private List<TenantDto> _tenants = new();
    private Guid? _selectedTenantId;
    private List<DirectoryRoleDto> _roles = new();
    private DirectoryRoleDto? _selectedRole;
    private bool _showRoleDialog = false;
    private DialogOptions _dialogOptions = new() { MaxWidth = MaxWidth.Medium, FullWidth = true };
    private bool _showPrivilegedOnly = false;
    private bool _showWithMembersOnly = false;

    private IEnumerable<DirectoryRoleDto> FilteredRoles => _roles
        .Where(r => !_showPrivilegedOnly || r.IsPrivileged)
        .Where(r => !_showWithMembersOnly || r.MemberCount > 0 || r.ServicePrincipalMemberCount > 0)
        .OrderByDescending(r => r.IsPrivileged)
        .ThenByDescending(r => r.MemberCount);

    protected override async Task OnInitializedAsync()
    {
        await LoadTenantsAsync();
        _selectedTenantId = TenantId ?? _tenants.FirstOrDefault()?.Id;

        if (_selectedTenantId.HasValue)
            await LoadRolesAsync();

        _isLoading = false;
    }

    private async Task LoadTenantsAsync()
    {
        try
        {
            _tenants = (await TenantService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading tenants: {ex.Message}", Severity.Error);
        }
    }

    private async Task LoadRolesAsync()
    {
        if (!_selectedTenantId.HasValue) return;

        _isLoading = true;
        try
        {
            var result = await InventoryService.GetDirectoryRolesAsync(_selectedTenantId.Value);
            _roles = result.ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading roles: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ViewRoleDetails(DirectoryRoleDto role)
    {
        _selectedRole = role;
        _showRoleDialog = true;
    }
}
