@page
@model Cloudativ.Assessment.Web.Pages.Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Cloudativ Assessment</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="/_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="/css/app.css" rel="stylesheet" />
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Poppins', 'Roboto', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
            position: relative;
            overflow: hidden;
        }
        .oval-decoration {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
        }
        .oval-1 { width: 600px; height: 400px; background: #E0FC8E; top: -100px; right: -200px; }
        .oval-2 { width: 400px; height: 300px; background: #51627A; bottom: -100px; left: -150px; }
        .oval-3 { width: 300px; height: 200px; background: #B6CBE0; top: 50%; left: 10%; }
        .login-card {
            background: white;
            padding: 2.5rem;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 420px;
            z-index: 1;
        }
        .logo-container { text-align: center; margin-bottom: 1.5rem; }
        .logo-container h1 { color: #51627A; font-size: 1.5rem; font-weight: 600; margin-top: 1rem; }
        .logo-container p { color: #666; font-size: 0.9rem; }
        .form-group { margin-bottom: 1rem; }
        .form-group label { display: block; margin-bottom: 0.5rem; color: #424242; font-weight: 500; }
        .form-group input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.2s;
        }
        .form-group input:focus { outline: none; border-color: #51627A; }
        .error-message {
            background: #ffebee;
            color: #c62828;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }
        .submit-btn {
            width: 100%;
            padding: 0.875rem;
            background: #51627A;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s;
        }
        .submit-btn:hover { background: #3d4a5c; }
        .divider { border-top: 1px solid #eee; margin: 1.5rem 0; }
        .hint { text-align: center; color: #888; font-size: 0.8rem; }
    </style>
</head>
<body>
    <div class="oval-decoration oval-1"></div>
    <div class="oval-decoration oval-2"></div>
    <div class="oval-decoration oval-3"></div>

    <div class="login-card">
        <div class="logo-container">
            <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
                <ellipse cx="32" cy="32" rx="28" ry="24" fill="#E0FC8E" opacity="0.9"/>
                <ellipse cx="32" cy="32" rx="20" ry="16" fill="#51627A"/>
                <ellipse cx="32" cy="32" rx="10" ry="8" fill="#E0FC8E"/>
            </svg>
            <h1>Cloudativ Assessment</h1>
            <p>Microsoft 365 Security Assessment Platform</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="Email" value="@Model.Email" required placeholder="Enter your email" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="Password" required placeholder="Enter your password" />
            </div>

            <button type="submit" class="submit-btn">Sign In</button>
        </form>

        <div class="divider"></div>
        <p class="hint">Default credentials: admin@cloudativ.local / Admin@123!</p>
    </div>
</body>
</html>
