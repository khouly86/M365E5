@page "/login"
@layout EmptyLayout
@inject AuthenticationStateService AuthService
@inject NavigationManager NavigationManager

<PageTitle>Login - Cloudativ Assessment</PageTitle>

<div class="login-container">
    <div class="login-background">
        <div class="oval-decoration oval-1"></div>
        <div class="oval-decoration oval-2"></div>
        <div class="oval-decoration oval-3"></div>
    </div>

    <MudPaper Class="login-card pa-8" Elevation="8">
        <div class="text-center mb-6">
            <div class="logo-container mb-4">
                <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
                    <ellipse cx="32" cy="32" rx="28" ry="24" fill="#E0FC8E" opacity="0.9"/>
                    <ellipse cx="32" cy="32" rx="20" ry="16" fill="#51627A"/>
                    <ellipse cx="32" cy="32" rx="10" ry="8" fill="#E0FC8E"/>
                </svg>
            </div>
            <MudText Typo="Typo.h4" Style="color: #51627A; font-weight: 600;">Cloudativ Assessment</MudText>
            <MudText Typo="Typo.subtitle1" Color="Color.Secondary">Microsoft 365 Security Assessment Platform</MudText>
        </div>

        <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="mb-4" Dense="true">@_errorMessage</MudAlert>
            }

            <MudTextField @bind-Value="_loginModel.Email"
                          Label="Email"
                          Variant="Variant.Outlined"
                          InputType="InputType.Email"
                          Class="mb-4"
                          Required="true"
                          RequiredError="Email is required"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Email" />

            <MudTextField @bind-Value="_loginModel.Password"
                          Label="Password"
                          Variant="Variant.Outlined"
                          InputType="@(_showPassword ? InputType.Text : InputType.Password)"
                          Class="mb-4"
                          Required="true"
                          RequiredError="Password is required"
                          Adornment="Adornment.End"
                          AdornmentIcon="@(_showPassword ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                          OnAdornmentClick="TogglePasswordVisibility" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="@_isLoading"
                       Class="mb-4">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                }
                Sign In
            </MudButton>
        </EditForm>

        <MudDivider Class="my-4" />

        <div class="text-center">
            <MudText Typo="Typo.caption" Color="Color.Secondary">
                Default credentials: admin@cloudativ.local / Admin@123!
            </MudText>
        </div>
    </MudPaper>

    <div class="footer-text">
        <MudText Typo="Typo.caption">Â© 2024 Cloudativ. All rights reserved.</MudText>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
    }

    .login-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }

    .oval-decoration {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
    }

    .oval-1 {
        width: 600px;
        height: 400px;
        background: #E0FC8E;
        top: -100px;
        right: -200px;
    }

    .oval-2 {
        width: 400px;
        height: 300px;
        background: #51627A;
        bottom: -100px;
        left: -150px;
    }

    .oval-3 {
        width: 300px;
        height: 200px;
        background: #B6CBE0;
        top: 50%;
        left: 10%;
    }

    .login-card {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 420px;
        border-radius: 16px;
        background: white;
    }

    .logo-container {
        display: flex;
        justify-content: center;
    }

    .footer-text {
        position: absolute;
        bottom: 20px;
        text-align: center;
    }
</style>

@code {
    private LoginModel _loginModel = new();
    private bool _isLoading = false;
    private bool _showPassword = false;
    private string? _errorMessage;

    private class LoginModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }

    private async Task HandleLogin()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            var (success, errorMessage) = await AuthService.LoginAsync(_loginModel.Email, _loginModel.Password);

            if (success)
            {
                NavigationManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                _errorMessage = errorMessage;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = "An error occurred during login. Please try again.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void TogglePasswordVisibility()
    {
        _showPassword = !_showPassword;
    }
}
